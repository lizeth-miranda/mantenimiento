<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="maintenance_equipment_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <!-- <t t-call="mantenimiento.maintenance_equipment_template" /> -->
                <t t-foreach="docs" t-as="doc">
                    <div class="Header">
                        <h3 class="text-center">FORMATO DE RESGUARDO</h3>
                        <br></br>
                        <table class="table table-sm o_main_table">
                            <thead>
                                <!-- <tr class="table-active">
                                    <td colspan="4" class="text-center">FORMATO DE RESGUARDO</td>
                                </tr> -->
                                <tr class="table-active">
                                    <th class="text-left">Revisión</th>
                                    <th class="text-left">Fecha de Publicación</th>
                                    <!-- <th class="text-left">Fecha de Próxima Revisión</th> -->
                                    <th class="text-left">Código</th>
                                </tr>
                            </thead>
                            <tbody class="mante_tbody">
                                <tr>
                                    <td>
                                        <span t-esc="doc.rev" />
                                    </td>

                                    <td>
                                        <span t-esc="doc.fecha_publ" t-options='{"widget": "date"}' />
                                    </td>
                                    <!-- <td>
                                        <span t-esc="doc.fecha_prox" t-options='{"widget": "date"}' />
                                    </td> -->
                                    <td>
                                        <span t-esc="doc.cod" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr class="table-active">
                                <td colspan="4" class="text-center">SOLICITUD DE EQUIPO DE COMPRA</td>
                            </tr>
                            <tr class="table-active">
                                <th name="desc" class="text-center">Nombre</th>
                                <th name="desc" class="text-center">Fecha</th>
                                <th name="desc" class="text-center">Departamento / obra</th>
                                <th name="desc" class="text-center">Puesto</th>
                            </tr>
                        </thead>
                        <tbody class="mante_tbody">
                            <tr>
                                <td name="td_desc">
                                    <span t-field="doc.employee" />
                                </td>
                                <td name="td_desc">
                                    <span t-field="doc.fecha" />
                                </td>
                                <td name="td_desc">
                                    <span t-field="doc.department" />
                                </td>
                                <td name="td_desc">
                                    <span t-field="doc.puesto" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr class="table-active">
                                <td colspan="4" class="text-center">DESCRIPCIÓN DEL EQUIPO</td>
                            </tr>
                            <tr class="table-active">
                                <th name="desc" class="text-center">Marca</th>
                                <th name="desc" class="text-center">Modelo</th>
                                <th name="desc" class="text-center">N° de serie</th>
                                <th name="desc" class="text-center">Comentarios</th>
                            </tr>

                        </thead>
                        <tbody class="mante_tbody">
                            <tr>
                                <td name="td_desc">
                                    <span t-field="doc.marca" />
                                </td>
                                <td name="td_desc">
                                    <span t-field="doc.model" />
                                </td>
                                <td name="td_desc">
                                    <span t-field="doc.serial_no" />
                                </td>
                                <td name="td_desc">
                                    <span t-field="doc.note" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <br></br>
                    <br></br>

                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr class="table-active">
                                <th name="desc" class="text-center">NOTA</th>
                            </tr>
                        </thead>
                        <tbody class="mante_tbody">
                            <tr>
                                <td name="td_desc">
                                    <span t-field="doc.nota" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                   <br></br>
                    <br></br>
                    <br></br>
                    <br></br>
                    <br></br>
                    <br></br>
                    <br></br>
                    <br></br>
                    <br></br>
                    <br></br>
                    <br></br>
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr class="table-active">
                                <th class="text-center">Nombre y Firma de conformidad del usuario</th>
                            </tr>
                        </thead>
                        <tbody class="mante_tbody">
                            <tr class="table-active"></tr>
                        </tbody>
                    </table>
                </t>
            </t>
        </t>
    </template>
</odoo>
